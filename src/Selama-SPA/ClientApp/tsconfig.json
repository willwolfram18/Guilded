{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es6", "dom" ],
    "types": [ "node", "jquery", "hammerjs" ],
    "rootDir": "./"
  },
  "exclude": [ "bin", "node_modules", "dist" ],
  "atom": { "rewriteTsconfig": false }
}
